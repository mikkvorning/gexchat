rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isEmailVerified() {
      return request.auth.token.email_verified;
    }

    function isUserInChat(chatData) {
      return chatData.participants.hasAny([{'userId': request.auth.uid}]);
    }

    // User collection rules
    match /users/{userId} {
      // Users can read all users (needed for search, display names, etc)
      allow read: if isSignedIn() && isEmailVerified();
      // Users can create their own document during signup (before verification)
      allow create: if isSignedIn() && request.auth.uid == userId;
      // Users can update their own document OR add chats to any user's chats array
      allow update: if isSignedIn() && isEmailVerified() && 
        (request.auth.uid == userId || 
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['chats']));
    }

    // Chat collection rules
    match /chats/{chatId} {
      // Allow read access for verified users
      allow read: if isSignedIn() && isEmailVerified();
      // Allow chat creation for verified users
      allow create: if isSignedIn() && isEmailVerified();
      // Allow chat updates for verified users
      allow update: if isSignedIn() && isEmailVerified();
      // Disable chat deletion
      allow delete: if false;
      
      // Messages subcollection rules
      match /messages/{messageId} {
        // Allow message access for verified users
        allow read, write: if isSignedIn() && isEmailVerified();
      }
    }
  }
}
